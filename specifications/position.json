{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$ref": "#/definitions/PositionPayload",
  "$id": "https://github.com/mrfylke/mtbuss-mqtt-validator/specifications/position.json",

  "definitions": {
    "PositionPayload": {
      "type": "object",
      "properties": {
        "atDateTime": {
          "type": "string",
          "format": "date-time"
        },
        "position": {
          "$ref": "#/definitions/Position"
        }
      },
      "required": ["atDateTime", "position"]
    },
    "Position": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "integer"
        },
        "longitude": {
          "type": "integer"
        }
      },
      "required": ["latitude", "longitude"]
    }
  }
}
