---
import "./base.css";
import { type TopicNode, printHtmlTree } from "../file-utils";

export interface Props {
  topicTree: TopicNode;
  topic?: string;
}

const { topicTree, topic } = Astro.props;
const htmlString = printHtmlTree(topicTree, topic);
---

<div class="not-prose">
  <pre
    class="topicTree bg-white rounded-xl p-8 mb-12 text-black leading-6 not-prose"><Fragment set:html={htmlString} /></pre>
</div>
